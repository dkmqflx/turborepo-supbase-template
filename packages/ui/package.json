{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "ui": "pnpm dlx shadcn@latest add",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "exports": {
